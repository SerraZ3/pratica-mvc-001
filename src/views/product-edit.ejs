<%- include("./partials/head") %>
<main>
  <h1>Atualizar produto</h1>
  <form action="/product/create" method="post">
    <input value="<%= product.nome %>" type="text" name="nome" placeholder="Nome do produto" />
    <br />
    <br />
    <input value="<%= product.descricao %>" type="text" name="descricao" placeholder="Descrição" />
    <br />
    <br />
    <input value="<%= product.preco %>" type="number" name="preco" placeholder="Preço" />
    <br />
    <br />
    <input value="<%= product.tamanho %>" type="text" name="tamanho" placeholder="Tamanho" />
    <br />
    <% if(locals.error){ %>
     <h2><%= error.message %></h2>
    <% } %>
    <br />
    <button type="submit">Atualizar</button>
  </form>
  <% if(locals.success){ %>
    <h2><%= success.message %></h2>
  <% } %>
</main>
<%- include("./partials/footer") %>
